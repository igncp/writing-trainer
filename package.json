{
  "name": "writing-trainer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "check": "lerna run check --stream",
    "clean": "sh helpers/clean.sh",
    "format": "lerna run format --stream",
    "lerna-link": "lerna link",
    "modules": "npm run -s clean -- -y && rm -rf node_modules && npm i",
    "postinstall": "lerna bootstrap && npm run build",
    "test": "lerna run test --stream --no-prefix"
  },
  "devDependencies": {
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13"
  },
  "dependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "lerna": "^3.20.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-prune": "^0.10.3"
  }
}
