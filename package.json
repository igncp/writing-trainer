{
  "name": "writing-trainer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "bun run next:build && bash scripts/package_extension.sh",
    "check": "bash scripts/check.sh",
    "clean": "sh scripts/clean.sh",
    "dev:be": "cd src/rust_packages/backend && cargo watch -x run",
    "dev:fe": "bash scripts/wasm_build.sh && bun add ./src/rust_packages/wasm/pkg && rm -rf .next && next dev",
    "diesel-migrations": "cd src/rust_packages/backend && diesel migration run",
    "eslint": "eslint src --ext ts --ext tsx --ext js",
    "format": "bash scripts/format.sh",
    "gen:gql": "bash scripts/gen_gql.sh",
    "next:build": "next build",
    "parse-translations": "i18next 'src/**/*.{ts,tsx}'",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,json,md}'",
    "prettier:check": "bun run prettier -- --list-different",
    "prettier:fix": "bun run prettier -- --write",
    "test": "jest",
    "type-coverage": "typescript-coverage-report --ignore-files '**/*.json'",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.6",
    "@igncp/common-config": "0.0.9",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.4",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/react-modal": "^3.16.3",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^8.0.6",
    "graphql": "^16.8.1",
    "jest-environment-jsdom": "^29.7.0",
    "papaparse": "^5.3.1",
    "postcss": "^8.4.31",
    "postcss-loader": "^8.1.1",
    "prop-types": "^15.8.1",
    "raw-loader": "^4.0.2",
    "sass": "^1.77.2",
    "tailwindcss": "^3.4.3",
    "text-loader": "^0.0.1",
    "ts-loader": "^9.5.1",
    "ts-prune": "^0.10.3",
    "typescript-coverage-report": "^0.8.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "yaml-loader": "^0.8.1"
  },
  "dependencies": {
    "@mui/base": "5.0.0-beta.68",
    "@types/react-helmet": "^6.1.5",
    "csv-loader": "^3.0.3",
    "i18next": "^23.11.5",
    "i18next-http-backend": "^2.5.2",
    "i18next-parser": "^9.0.0",
    "js-base64": "^3.7.7",
    "knip": "^5.50.2",
    "lodash": "^4.17.21",
    "next": "^14.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-i18next": "^14.1.2",
    "react-icons": "^5.2.1",
    "react-modal": "^3.16.1",
    "react-toastify": "^10.0.5",
    "react-tooltip": "^5.27.0",
    "react-use": "^17.3.2",
    "ts-jest": "^29.4.0",
    "writing-trainer-wasm": "./src/rust_packages/wasm/pkg"
  },
  "typeCoverage": {
    "atLeast": 95
  }
}
