{
  "name": "writing-trainer-core",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "eslint": "eslint . --ext ts --ext tsx --ext js",
    "format": "sh helpers/format.sh",
    "pre-commit": "sh helpers/gitHooks/precommit.sh",
    "pre-push": "sh helpers/gitHooks/prepush.sh",
    "sonar": "npm test -- --coverage && SONAR_TOKEN=$(cat sonar-token.txt) node helpers/sonar.js",
    "test": "jest --runInBand",
    "type-coverage": "type-coverage -p . --detail --strict --ignore-files **/*.test.ts"
  },
  "keywords": [],
  "devDependencies": {
    "@types/chrome": "0.0.83",
    "@types/jest": "^24.0.12",
    "@types/lodash": "^4.14.123",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "csv-loader": "^3.0.2",
    "enzyme": "^3.10.0",
    "eslint": "^6.6.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "jest": "^24.7.1",
    "lodash": "^4.17.11",
    "papaparse": "^4.6.3",
    "prettier": "^1.17.0",
    "raw-loader": "^3.0.0",
    "sonarqube-scanner": "^2.4.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.5",
    "ts-node": "^8.3.0",
    "type-coverage": "^2.0.2",
    "typescript": "^3.4.5"
  },
  "typeCoverage": {
    "atLeast": 100
  }
}
