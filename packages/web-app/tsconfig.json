{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es7", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {
      "#/*": ["src/*"]
    },
    "rootDir": "src",
    "sourceMap": false,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "src/typings",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*.js",
    ".eslintrc.js"
  ]
}
