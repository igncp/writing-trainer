{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {
      "#/*": ["src/*"]
    },
    "rootDir": "src",
    "sourceMap": false,
    "target": "es5",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*.js", "**/*.ts", "**/*.tsx"]
}
